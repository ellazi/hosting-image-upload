<div class="container">
  <div class="flex">
    <div class="left">
      <h2><%= @apartment.name %></h2>
      <p>Address: <%= @apartment.address %></p>
      <p><%= @apartment.description %></p>
      <br><br>
      <p>Price: <%= @apartment.price %>k â‚¬</p>
      <p>Dimensions: <%= @apartment.square_meters %> m2</p>
      <br>
      <div class="flex">
        <h3>Reviews</h3>
        <%= link_to "+ add a review", new_apartment_review_path(@apartment), class: "add-review" %>
      </div>
      <ul class="review">
        <% if @apartment.reviews.empty? %>
          <li>No reviews yet</li>
        <% else %>
          <% @apartment.reviews.each do |review| %>
            <div class="flex">
              <li><%= review.content%></li>
              <%= link_to "Delete",
                  review_path(review),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %>
            </div>
          <% end %>
        <% end %>
      </ul>
      <% if user_signed_in? %>
        <div class="show-buttons">
          <%= link_to "Edit this haven", edit_apartment_path(@apartment), class: "button green", style: "margin-right:10px;" %>
          <%= link_to "Delete this haven",
            apartment_path(@apartment),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button red" %>
        </div>
      <% end %>
    </div>
    <div class="right">
      <div>
        <%= cl_image_tag @apartment.photo.key %>
      </div>
      <div class="map-container"
        data-controller="map"
        id="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
