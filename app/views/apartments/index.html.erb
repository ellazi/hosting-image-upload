<div class="<%= "banner#{rand(1..3)}" %>">
  <div class="black-veil"></div>
  <div class="banner-text">
    <h1>Discover<br>
    the future<br>
    of housing</h1>
    <p>Your gate to becoming a homeowner on a budget!</p>
  </div>
</div>
<div class="container-100" id="index-list">
  <div class="grid">
    <% @apartments.each do |apartment| %>
      <div class="card">
        <%= link_to apartment_path(apartment) do %>
          <%= cl_image_tag apartment.photo.key %>
          <div class="text">
            <h3><%= apartment.name %></h3>
            <p>
              <%= apartment.address %><br>
              <em><%= apartment.description.truncate(30) %></em>
            </p>
            <div class="numbers">
              <p><%= apartment.square_meters %> m2</p>
              <p><%= apartment.price %>k â‚¬</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
